    },
    "scripts": {
        "create": "node createWidget.js",
        "start": "HOST=conversation.local react-scripts start",
        "build": "env $(cat .env.${REACT_APP_ENV} | xargs) react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "ci:build": "export REACT_APP_ENV=production && npm run build",
        "ci:test": "npm run test -- --watchAll=false",
        "ci:deploy:development": "export FOLDER=wireless-widgets && export PUBLIC_URL=/$FOLDER/ && REACT_APP_ENV=development yarn run build && rm -rf dist && mkdir dist && cp -v build/index.html dist/index.html && mv -v build dist/$FOLDER && s3-deploy './dist/**' --cwd './dist/' --gzip --region ca-central-1 --bucket wireless.widgets.test.statflo.com --cache 3600 --etag --deleteRemoved --distId E3ESSDA8SPEX77 --invalidate 'index.html /*'",
        "ci:deploy:production": "export FOLDER=wireless-widgets && export PUBLIC_URL=/$FOLDER/ && REACT_APP_ENV=production yarn run build && rm -rf dist && mkdir dist && cp -v build/index.html dist/index.html && mv -v build dist/$FOLDER && s3-deploy './dist/**' --cwd './dist/' --gzip --region ca-central-1 --bucket wireless.widgets.statflo.com --cache 3600 --etag --deleteRemoved --distId ENZ4XFAK5AGXS --invalidate 'index.html /*'"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
